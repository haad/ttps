<h1>Listing travels</h1>

<table>
  <thead>
    <tr>
      <th>Destination</th>
      <th>Description</th>
      <th>Players count</th>
      <th>Travel costs</th>
      <th>Travel distance</th>
      <th>Travel date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.destination %></td>
        <td><%= travel.description %></td>
        <td><%= travel.players_count %></td>
        <td><%= travel.travel_costs %></td>
        <td><%= travel.travel_distance %></td>
        <td><%= travel.travel_date %></td>
        <td><%= link_to 'Show', travel %></td>
        <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
        <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

